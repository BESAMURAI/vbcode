Private Sub bina_Click()
    Dim n As Integer, s As String
    n = Val(Text1.Text)
    s = ""
    If n = 0 Then
        s = "0"
    Else
        Do While n > 0
            s = (n Mod 2) & s
            n = n / 2
        Loop
    End If
    Label2.Caption = bina.Caption
    Text2.Text = s
End Sub

Private Sub clear_Click()
    Text1.Text = ""
    Text2.Text = ""
End Sub

Private Sub exit_Click()
    End
End Sub

Private Sub hexa_Click()
    Dim n As Integer
    n = Val(Text1.Text)
    Label2.Caption = hexa.Caption
    Text2.Text = Hex(n)
End Sub

Private Sub octa_Click()
    Dim n As Integer
    n = Val(Text1.Text)
    Label2.Caption = octa.Caption
    Text2.Text = Oct(n)
End Sub
