program 10

SQL> create table student(rollno number primary key, name varchar(20) , marks number );

SQL> set serveroutput on;
SQL> create or replace trigger student_msg
  2  after insert on student
  3  begin
  4  dbms_output.put_line('New stdent record inserted successfully!');
  5  end;
  6  /

SQL> insert into student values (1 ,'aju',96);
_New stdent record inserted successfully!_


CREATE TABLE WORKER_SALARY (
  ID NUMBER(5) PRIMARY KEY,
  NAME VARCHAR2(10),
  SALARY NUMBER(10)
);

INSERT INTO WORKER_SALARY VALUES (1, 'RAJESH', 10000);
INSERT INTO WORKER_SALARY VALUES (2, 'PRASAD', 12000);

SET SERVEROUTPUT ON;

CREATE OR REPLACE TRIGGER DISP_SALARY
BEFORE UPDATE ON WORKER_SALARY
FOR EACH ROW
BEGIN
  DBMS_OUTPUT.PUT_LINE('OLD: ' || :OLD.SALARY || '  NEW: ' || :NEW.SALARY);
END;
/

UPDATE WORKER_SALARY SET SALARY = SALARY + 500;
